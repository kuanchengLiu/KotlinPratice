<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="@color/black">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TommyLiu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/hi" app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintVertical_bias="0.337" android:textSize="30sp" android:textColor="@color/dodgerblue"/>
    <ImageView
            android:layout_width="211dp"
            android:layout_height="223dp" app:srcCompat="@drawable/photo" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.945" />
    <ImageView
            android:layout_width="188dp"
            android:layout_height="124dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imageView" android:layout_marginEnd="1dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="91dp"
            android:layout_height="85dp" app:srcCompat="@drawable/pic" android:id="@+id/imageView3"
            android:layout_marginEnd="167dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/hi"
            android:layout_marginBottom="177dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.218" app:layout_constraintVertical_bias="0.497"/>
    <ImageView
            android:layout_width="126dp"
            android:layout_height="127dp" app:srcCompat="@drawable/ig" android:id="@+id/imageView4"
            android:layout_marginEnd="206dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="232dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.142"
            android:layout_marginBottom="149dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="XXXXXXXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginStart="120dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginTop="124dp"
            app:layout_constraintTop_toBottomOf="@+id/hi" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="95dp" app:layout_constraintHorizontal_bias="0.666" android:textSize="24sp"
            android:textColor="@color/dodgerblue"/>
    <TextView
            android:text="XXXXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginStart="66dp"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="135dp" android:textSize="24sp" android:textColor="@color/dodgerblue"/>
    <androidx.cardview.widget.CardView
            android:layout_width="173dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="73dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginEnd="230dp" app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>